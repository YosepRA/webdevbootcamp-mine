<% include ../partials/header %>
<% include ../partials/navbar %>

<div class="container">
  <section id="form">
    <h1>Edit Comment</h1>

    <form action="/campgrounds/<%= camp._id %>/comments/<%= comment._id %>?_method=PUT" method="POST" class="form-horizontal">
      <div class="form-group">
        <label for="comment" class="col-xs-2 col-md-3 control-label">Comment</label>
        <div class="col-xs-8">
          <textarea type="text" name="text" id="comment" cols="30" rows="6" class="form-control" placeholder="Enter comments..." autofocus><%= comment.text %></textarea>
        </div>
      </div>

      <div class="form-group">
        <div class="col-xs-2 col-md-3"></div>
        <div class="col-xs-8">
          <input type="submit" class="btn btn-primary" value="Submit">
        </div>
      </div>
    </form>
  </section>
</div>

<% include ../partials/footer %>
