<div class="container">
  <div id="newCamp">
    <h1>Create a new Campground</h1>

    <form action="/campgrounds" method="post" class="form-horizontal">
      <div class="form-group">
        <label for="campName" class="col-xs-4 control-label">Camp Name</label>
        <div class="col-xs-8 col-md-6">
          <input type="text" name="campName" id="campName" class="form-control" placeholder="Enter Camp Name">
        </div>
      </div>
      
      <div class="form-group">
        <label for="imageURL" class="col-xs-4 control-label">Image URL</label>
        <div class="col-xs-8 col-md-6">
          <input type="text" name="imageURL" id="imageURL" class="form-control" placeholder="Enter Image URL">
        </div>
      </div>

      <div class="form-group">
        <label for="description" class="col-xs-4 control-label">Description</label>
        <div class="col-xs-8 col-md-6">
          <textarea name="description" id="description" class="form-control" placeholder="Enter the campground's description" cols="30" rows="5"></textarea>
          <!-- <input type="text" name="description" id="description" class="form-control" placeholder="Enter Description"> -->
        </div>
      </div>

      <div class="form-group">
        <div class="col-xs-4"></div>
        <div class="col-xs-8 col-md-6">
          <input type="submit" class="btn btn-primary" value="Submit">
        </div>
      </div>
    </form>
  </div>

