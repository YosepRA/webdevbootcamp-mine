<% include partials/header %>
<% include partials/navbar %>

<div class="container">
  <header class="jumbotron">
    <h1>Welcome to YelpCamp!</h1>
    <p>Choose and view your campground. We got it all.</p>

    <p>
      <a href="/campgrounds/new" class="btn btn-success">Create New Campground</a>
    </p>
  </header>

  <section class="row text-center campground">
  <% if (campData.status === 'false') { %>
    <h3>Campgrounds has failed to load. Please try again a few moment later.</h3>
  <% } else if (campData.camps.length === 0) { %>
    <h3>There is no campground yet.</h3>
  <% } else {
    campData.camps.forEach(camp => {
      const name = camp.name;
      const image = camp.image;
      const id = camp._id; %>

      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <img src="<%= image %>" alt="<%= name %>" title="<%= name %>" class="img-responsive">
          <div class="caption">
            <h3><%= name %></h3>
          </div>
          <p>
            <a href="/campgrounds/<%= id %>" class="btn btn-primary">More Info</a>
          </p>
        </div>
      </div>
    <% });
  } %>
  </section>
</div>

<% include partials/footer %>
